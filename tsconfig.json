{
	"compilerOptions": {
		"target": "ES2023",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"jsx": "react",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"src/types/**/*",
		"src/functions/backup/table_Backup",
		"display(W.I.P)",
		"backup"
	],
	"exclude": ["node_modules", "dist"],
	"files": ["src/types/css.d.ts"]
}
